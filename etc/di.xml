<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
	<preference for="Squadkin\SquadexaAI\Api\GeneratedCsvRepositoryInterface" type="Squadkin\SquadexaAI\Model\GeneratedCsvRepository"/>
	<preference for="Squadkin\SquadexaAI\Api\Data\GeneratedCsvInterface" type="Squadkin\SquadexaAI\Model\GeneratedCsv"/>
	<preference for="Squadkin\SquadexaAI\Api\Data\GeneratedCsvSearchResultsInterface" type="Magento\Framework\Api\SearchResults"/>
	<preference for="Squadkin\SquadexaAI\Api\AiProductRepositoryInterface" type="Squadkin\SquadexaAI\Model\AiProductRepository"/>
	<preference for="Squadkin\SquadexaAI\Api\Data\AiProductInterface" type="Squadkin\SquadexaAI\Model\AiProduct"/>
	<preference for="Squadkin\SquadexaAI\Api\Data\AiProductSearchResultsInterface" type="Magento\Framework\Api\SearchResults"/>
	<virtualType name="Squadkin\SquadexaAI\Model\ResourceModel\GeneratedCsv\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
		<arguments>
			<argument name="mainTable" xsi:type="string">squadkin_squadexaai_generatedcsv</argument>
			<argument name="resourceModel" xsi:type="string">Squadkin\SquadexaAI\Model\ResourceModel\GeneratedCsv\Collection</argument>
		</arguments>
	</virtualType>
	<virtualType name="Squadkin\SquadexaAI\Model\ResourceModel\AiProduct\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
		<arguments>
			<argument name="mainTable" xsi:type="string">squadkin_squadexaai_aiproduct</argument>
			<argument name="resourceModel" xsi:type="string">Squadkin\SquadexaAI\Model\ResourceModel\AiProduct</argument>
		</arguments>
	</virtualType>
	<type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
		<arguments>
			<argument name="collections" xsi:type="array">
				<item name="squadkin_squadexaai_generatedcsv_listing_data_source" xsi:type="string">Squadkin\SquadexaAI\Model\ResourceModel\GeneratedCsv\Grid\Collection</item>
				<item name="squadkin_squadexaai_generatedcsv_simple_listing_data_source" xsi:type="string">Squadkin\SquadexaAI\Model\ResourceModel\GeneratedCsv\Grid\Collection</item>
				<item name="squadkin_squadexaai_aiproduct_listing_data_source" xsi:type="string">Squadkin\SquadexaAI\Model\ResourceModel\AiProduct\Grid\Collection</item>
			</argument>
		</arguments>
	</type>
	
	<!-- Custom Logger for Squadexa AI API -->
	<virtualType name="SquadexaAILogger" type="Magento\Framework\Logger\Monolog">
		<arguments>
			<argument name="handlers" xsi:type="array">
				<item name="squadexa_handler" xsi:type="object">Squadkin\SquadexaAI\Logger\Handler</item>
			</argument>
		</arguments>
	</virtualType>
	
	<type name="Squadkin\SquadexaAI\Logger\Logger">
		<arguments>
			<argument name="logger" xsi:type="object">SquadexaAILogger</argument>
		</arguments>
	</type>
	
	<!-- Plugin to add Update from AI button to product edit page -->
	<type name="Magento\Catalog\Block\Adminhtml\Product\Edit\Button\Generic">
		<plugin name="add_update_from_ai_button" type="Squadkin\SquadexaAI\Plugin\Product\Edit\AddUpdateFromAiButton" sortOrder="10"/>
	</type>
	
	<!-- Plugin to pre-fill product form with AI data -->
	<type name="Magento\Catalog\Controller\Adminhtml\Product\Builder">
		<plugin name="prefill_product_with_ai_data" type="Squadkin\SquadexaAI\Plugin\Catalog\Controller\Adminhtml\Product\BuilderPlugin" sortOrder="10"/>
	</type>
	
	<!-- Plugin to capture AI product ID before product save (stores in product object for observer) -->
	<type name="Magento\Catalog\Api\ProductRepositoryInterface">
		<plugin name="capture_ai_product_id_before_save" type="Squadkin\SquadexaAI\Plugin\Catalog\Api\ProductRepositoryPlugin" sortOrder="10"/>
	</type>
	
	<!-- Plugin to redirect to Squadexa AI - Products Data grid after saving product created from AI -->
	<type name="Magento\Catalog\Controller\Adminhtml\Product\Save">
		<plugin name="redirect_to_ai_products_after_save" type="Squadkin\SquadexaAI\Plugin\Catalog\Controller\Adminhtml\Product\SavePlugin" sortOrder="10"/>
	</type>
	
	<!-- Data modifier to inject AI data into product form -->
	<virtualType name="Magento\Catalog\Ui\DataProvider\Product\Form\Modifier\Pool">
		<arguments>
			<argument name="modifiers" xsi:type="array">
				<item name="ai_data" xsi:type="array">
					<item name="class" xsi:type="string">Squadkin\SquadexaAI\Ui\DataProvider\Product\Form\Modifier\AiDataModifier</item>
					<item name="sortOrder" xsi:type="number">5</item>
				</item>
			</argument>
		</arguments>
	</virtualType>
</config>
