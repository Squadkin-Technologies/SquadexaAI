<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">squadkin_squadexaai_aiproduct_form.squadkin_squadexaai_aiproduct_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">AI Product Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Squadkin\SquadexaAI\Block\Adminhtml\AiProduct\Edit\SaveButton"/>
            <button name="delete" class="Squadkin\SquadexaAI\Block\Adminhtml\AiProduct\Edit\DeleteButton"/>
            <button name="back" class="Squadkin\SquadexaAI\Block\Adminhtml\AiProduct\Edit\BackButton"/>
        </buttons>
        <namespace>squadkin_squadexaai_aiproduct_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>squadkin_squadexaai_aiproduct_form.squadkin_squadexaai_aiproduct_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="squadkin_squadexaai_aiproduct_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Squadkin\SquadexaAI\Model\AiProduct\DataProvider" name="squadkin_squadexaai_aiproduct_form_data_source">
            <settings>
                <requestFieldName>aiproduct_id</requestFieldName>
                <primaryFieldName>aiproduct_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">General Information</label>
        </settings>
        <field name="aiproduct_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>aiproduct_id</dataScope>
            </settings>
        </field>
        <field name="sku" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">SKU</label>
                <dataScope>sku</dataScope>
            </settings>
        </field>
        <field name="name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Product Name</label>
                <dataScope>name</dataScope>
            </settings>
        </field>
        <field name="description" sortOrder="30" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
            </settings>
        </field>
        <field name="short_description" sortOrder="40" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Short Description</label>
                <dataScope>short_description</dataScope>
            </settings>
        </field>
        <field name="price" sortOrder="50" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Price</label>
                <dataScope>price</dataScope>
            </settings>
        </field>
        <field name="special_price" sortOrder="60" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Special Price</label>
                <dataScope>special_price</dataScope>
            </settings>
        </field>
        <field name="weight" sortOrder="70" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Weight</label>
                <dataScope>weight</dataScope>
            </settings>
        </field>
        <field name="qty" sortOrder="80" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-digits" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Quantity</label>
                <dataScope>qty</dataScope>
            </settings>
        </field>
        <field name="category" sortOrder="90" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Category</label>
                <dataScope>category</dataScope>
            </settings>
        </field>
        <field name="status" sortOrder="100" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">Enabled</item>
                                <item name="label" xsi:type="string" translate="true">Enabled</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">Disabled</item>
                                <item name="label" xsi:type="string" translate="true">Disabled</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="seo">
        <settings>
            <label translate="true">SEO Information</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="meta_title" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Title</label>
                <dataScope>meta_title</dataScope>
            </settings>
        </field>
        <field name="meta_description" sortOrder="20" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Description</label>
                <dataScope>meta_description</dataScope>
            </settings>
        </field>
        <field name="meta_keywords" sortOrder="30" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Keywords</label>
                <dataScope>meta_keywords</dataScope>
            </settings>
        </field>
        <field name="url_key" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">URL Key</label>
                <dataScope>url_key</dataScope>
            </settings>
        </field>
    </fieldset>
    <fieldset name="custom_attributes">
        <settings>
            <label translate="true">Custom Attributes</label>
            <collapsible>true</collapsible>
        </settings>
        <container name="custom_attributes_container">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Squadkin_SquadexaAI/js/form/components/custom-attributes</item>
                    <item name="template" xsi:type="string">Squadkin_SquadexaAI/form/custom-attributes</item>
                    <item name="attributeDetailsUrl" xsi:type="url" path="squadkin_squadexaai/aiproduct/attributedetails"/>
                    <item name="componentType" xsi:type="string">container</item>
                    <item name="dataScope" xsi:type="string">custom_attributes_data</item>
                    <item name="label" xsi:type="string" translate="true">Custom Attributes</item>
                </item>
            </argument>
        </container>
        <dynamicRows name="custom_attributes" sortOrder="20">
            <settings>
                <addButtonLabel translate="true">Add Custom Attribute</addButtonLabel>
                <columnsHeader>false</columnsHeader>
                <dndConfig>
                    <param name="enabled" xsi:type="boolean">false</param>
                </dndConfig>
                <additionalClasses>
                    <class name="admin__dynamic-rows">true</class>
                </additionalClasses>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">container</item>
                        <item name="dataScope" xsi:type="string"></item>
                        <item name="component" xsi:type="string">Squadkin_SquadexaAI/js/form/components/attribute-row</item>
                        <item name="attributeDetailsUrl" xsi:type="url" path="squadkin_squadexaai/aiproduct/attributedetails"/>
                    </item>
                </argument>
                <field name="attribute_code" formElement="select" sortOrder="10">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="fit" xsi:type="boolean">true</item>
                            <item name="dataScope" xsi:type="string">attribute_code</item>
                            <item name="breakLine" xsi:type="boolean">false</item>
                            <item name="component" xsi:type="string">Squadkin_SquadexaAI/js/form/element/attribute-select</item>
                        </item>
                    </argument>
                    <settings>
                        <validation>
                            <rule name="required-entry" xsi:type="boolean">true</rule>
                        </validation>
                        <dataType>text</dataType>
                        <label translate="true">Attribute</label>
                        <elementTmpl>ui/form/element/select</elementTmpl>
                        <tooltip>
                            <description translate="true">Select an attribute from the dropdown. The form will adapt based on the attribute type.</description>
                        </tooltip>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Squadkin\SquadexaAI\Model\Config\Source\AttributeOptions"/>
                                <caption translate="true">-- Please Select Attribute --</caption>
                            </settings>
                        </select>
                    </formElements>
                </field>
                <container name="value_container" sortOrder="20">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="component" xsi:type="string">Squadkin_SquadexaAI/js/form/components/attribute-value</item>
                            <item name="dataScope" xsi:type="string">value_container</item>
                            <item name="breakLine" xsi:type="boolean">false</item>
                            <item name="componentType" xsi:type="string">container</item>
                            <item name="label" xsi:type="string" translate="true">Value</item>
                        </item>
                    </argument>
                    <!-- Default text input -->
                    <field name="value" formElement="input" sortOrder="10">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="fit" xsi:type="boolean">true</item>
                                <item name="dataScope" xsi:type="string">value</item>
                                <item name="breakLine" xsi:type="boolean">false</item>
                                <item name="visible" xsi:type="boolean">true</item>
                            </item>
                        </argument>
                        <settings>
                            <validation>
                                <rule name="required-entry" xsi:type="boolean">true</rule>
                            </validation>
                            <dataType>text</dataType>
                            <label translate="true">Value</label>
                            <elementTmpl>ui/form/element/input</elementTmpl>
                        </settings>
                    </field>
                    <!-- Select dropdown for select attributes -->
                    <field name="value_select" formElement="select" sortOrder="20">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="fit" xsi:type="boolean">true</item>
                                <item name="dataScope" xsi:type="string">value</item>
                                <item name="breakLine" xsi:type="boolean">false</item>
                                <item name="visible" xsi:type="boolean">false</item>
                            </item>
                        </argument>
                        <settings>
                            <validation>
                                <rule name="required-entry" xsi:type="boolean">true</rule>
                            </validation>
                            <dataType>text</dataType>
                            <label translate="true">Value</label>
                            <elementTmpl>ui/form/element/select</elementTmpl>
                        </settings>
                        <formElements>
                            <select>
                                <settings>
                                    <options class="Magento\Catalog\Model\Product\Attribute\Source\Status"/>
                                    <caption translate="true">-- Please Select Value --</caption>
                                </settings>
                            </select>
                        </formElements>
                    </field>
                    <!-- Multiselect for multiselect attributes -->
                    <field name="value_multiselect" formElement="multiselect" sortOrder="30">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="fit" xsi:type="boolean">true</item>
                                <item name="dataScope" xsi:type="string">value</item>
                                <item name="breakLine" xsi:type="boolean">false</item>
                                <item name="visible" xsi:type="boolean">false</item>
                            </item>
                        </argument>
                        <settings>
                            <validation>
                                <rule name="required-entry" xsi:type="boolean">true</rule>
                            </validation>
                            <dataType>text</dataType>
                            <label translate="true">Value</label>
                            <elementTmpl>ui/form/element/multiselect</elementTmpl>
                        </settings>
                        <formElements>
                            <multiselect>
                                <settings>
                                    <options class="Magento\Catalog\Model\Product\Attribute\Source\Status"/>
                                </settings>
                            </multiselect>
                        </formElements>
                    </field>
                    <!-- Boolean for yes/no attributes -->
                    <field name="value_boolean" formElement="select" sortOrder="40">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="fit" xsi:type="boolean">true</item>
                                <item name="dataScope" xsi:type="string">value</item>
                                <item name="breakLine" xsi:type="boolean">false</item>
                                <item name="visible" xsi:type="boolean">false</item>
                            </item>
                        </argument>
                        <settings>
                            <validation>
                                <rule name="required-entry" xsi:type="boolean">true</rule>
                            </validation>
                            <dataType>text</dataType>
                            <label translate="true">Value</label>
                            <elementTmpl>ui/form/element/select</elementTmpl>
                        </settings>
                        <formElements>
                            <select>
                                <settings>
                                    <options>
                                        <option name="1" xsi:type="array">
                                            <item name="value" xsi:type="string">1</item>
                                            <item name="label" xsi:type="string" translate="true">Yes</item>
                                        </option>
                                        <option name="0" xsi:type="array">
                                            <item name="value" xsi:type="string">0</item>
                                            <item name="label" xsi:type="string" translate="true">No</item>
                                        </option>
                                    </options>
                                    <caption translate="true">-- Please Select --</caption>
                                </settings>
                            </select>
                        </formElements>
                    </field>
                    <!-- Date picker for date attributes -->
                    <field name="value_date" formElement="date" sortOrder="50">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="fit" xsi:type="boolean">true</item>
                                <item name="dataScope" xsi:type="string">value</item>
                                <item name="breakLine" xsi:type="boolean">false</item>
                                <item name="visible" xsi:type="boolean">false</item>
                            </item>
                        </argument>
                        <settings>
                            <validation>
                                <rule name="required-entry" xsi:type="boolean">true</rule>
                            </validation>
                            <dataType>text</dataType>
                            <label translate="true">Value</label>
                            <elementTmpl>ui/form/element/date</elementTmpl>
                        </settings>
                        <formElements>
                            <date>
                                <settings>
                                    <options>
                                        <option name="dateFormat" xsi:type="string">mm/dd/yyyy</option>
                                        <option name="showsTime" xsi:type="boolean">false</option>
                                    </options>
                                </settings>
                            </date>
                        </formElements>
                    </field>
                    <!-- Textarea for textarea attributes -->
                    <field name="value_textarea" formElement="textarea" sortOrder="60">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="fit" xsi:type="boolean">true</item>
                                <item name="dataScope" xsi:type="string">value</item>
                                <item name="breakLine" xsi:type="boolean">false</item>
                                <item name="visible" xsi:type="boolean">false</item>
                            </item>
                        </argument>
                        <settings>
                            <validation>
                                <rule name="required-entry" xsi:type="boolean">true</rule>
                            </validation>
                            <dataType>text</dataType>
                            <label translate="true">Value</label>
                            <elementTmpl>ui/form/element/textarea</elementTmpl>
                        </settings>
                    </field>
                </container>
                <field name="actionDelete" formElement="actionDelete" sortOrder="30">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="componentType" xsi:type="string">actionDelete</item>
                            <item name="dataType" xsi:type="string">text</item>
                            <item name="fit" xsi:type="boolean">true</item>
                            <item name="breakLine" xsi:type="boolean">false</item>
                            <item name="template" xsi:type="string">Magento_Ui/dynamic-rows/cells/action-delete</item>
                        </item>
                    </argument>
                    <settings>
                        <label translate="true">Action</label>
                    </settings>
                </field>
            </container>
        </dynamicRows>
    </fieldset>
</form> 