<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">squadkin_squadexaai_aiproduct_form.squadkin_squadexaai_aiproduct_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">AI Product Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Squadkin\SquadexaAI\Block\Adminhtml\AiProduct\Edit\SaveButton"/>
            <button name="create_product" class="Squadkin\SquadexaAI\Block\Adminhtml\AiProduct\Edit\CreateProductButton"/>
            <button name="update_product" class="Squadkin\SquadexaAI\Block\Adminhtml\AiProduct\Edit\UpdateProductButton"/>
            <button name="delete" class="Squadkin\SquadexaAI\Block\Adminhtml\AiProduct\Edit\DeleteButton"/>
            <button name="back" class="Squadkin\SquadexaAI\Block\Adminhtml\AiProduct\Edit\BackButton"/>
        </buttons>
        <namespace>squadkin_squadexaai_aiproduct_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>squadkin_squadexaai_aiproduct_form.squadkin_squadexaai_aiproduct_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="squadkin_squadexaai_aiproduct_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Squadkin\SquadexaAI\Model\AiProduct\DataProvider" name="squadkin_squadexaai_aiproduct_form_data_source">
            <settings>
                <requestFieldName>aiproduct_id</requestFieldName>
                <primaryFieldName>aiproduct_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">General Information</label>
        </settings>
        <field name="aiproduct_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>aiproduct_id</dataScope>
            </settings>
        </field>
        <field name="product_name" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Product Name</label>
                <dataScope>product_name</dataScope>
            </settings>
        </field>
        <field name="primary_keywords" sortOrder="20" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Primary Keywords</label>
                <dataScope>primary_keywords</dataScope>
            </settings>
        </field>
        <field name="secondary_keywords" sortOrder="30" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Secondary Keywords</label>
                <dataScope>secondary_keywords</dataScope>
            </settings>
        </field>
        <field name="short_description" sortOrder="50" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Short Description</label>
                <dataScope>short_description</dataScope>
            </settings>
        </field>
        <field name="description" sortOrder="60" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
            </settings>
        </field>
    </fieldset>
    <fieldset name="seo">
        <settings>
            <label translate="true">SEO Information</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="meta_title" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Title</label>
                <dataScope>meta_title</dataScope>
            </settings>
        </field>
        <field name="meta_description" sortOrder="20" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Description</label>
                <dataScope>meta_description</dataScope>
            </settings>
        </field>
    </fieldset>
    <fieldset name="product_details">
        <settings>
            <label translate="true">Product Details</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="key_features" sortOrder="10" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Key Features (one per line)</label>
                <dataScope>key_features</dataScope>
                <notice translate="true">Enter each key feature on a new line</notice>
            </settings>
        </field>
        <field name="how_to_use" sortOrder="20" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">How to Use (one per line)</label>
                <dataScope>how_to_use</dataScope>
                <notice translate="true">Enter each instruction on a new line</notice>
            </settings>
        </field>
        <field name="ingredients" sortOrder="30" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Ingredients (one per line)</label>
                <dataScope>ingredients</dataScope>
                <notice translate="true">Enter each ingredient on a new line</notice>
            </settings>
        </field>
        <field name="upc" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">UPC</label>
                <dataScope>upc</dataScope>
            </settings>
        </field>
        <field name="keywords" sortOrder="50" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Keywords (comma-separated)</label>
                <dataScope>keywords</dataScope>
                <notice translate="true">Enter keywords separated by commas</notice>
            </settings>
        </field>
    </fieldset>
    <fieldset name="pricing">
        <settings>
            <label translate="true">Pricing Information</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="pricing_usd_min" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Pricing USD Min</label>
                <dataScope>pricing_usd_min</dataScope>
            </settings>
        </field>
        <field name="pricing_usd_max" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Pricing USD Max</label>
                <dataScope>pricing_usd_max</dataScope>
            </settings>
        </field>
        <field name="pricing_cad_min" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Pricing CAD Min</label>
                <dataScope>pricing_cad_min</dataScope>
            </settings>
        </field>
        <field name="pricing_cad_max" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">aiproduct</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Pricing CAD Max</label>
                <dataScope>pricing_cad_max</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
